
    .course-task {
        width: 100%;
        height: 240rpx;
        display: flex;
        justify-content: flex-start;
        padding: 25rpx 15rpx 30rpx;
        box-sizing: border-box;
        background: #fff;
        border-bottom: 1px solid #efefef;
    }
    .course-task .order {
        width: 100rpx;
        height: 100%;
        text-align:center;
        line-height:210rpx;
        color:#1abcb0;
    }
    .course-task .order image {
        width:81rpx;
        height:113rpx;
        margin-top:48rpx;
    }
    .course-task .order .order-normal {
        line-height:210rpx;
        font-size:3em;
        color:#1abcb0;
    }
    .course-task .content {
        width: calc(100% - 160rpx);
        height: 100%;
    }
    .link.detail {
        width: 60rpx;
    }
    .link image {
        width:30rpx;
        margin-left:15rpx;
        height:60rpx;
        margin-top:75rpx;
    }
    .course-name {
        font-size: 36rpx;
        height: 60rpx;
        line-height: 60rpx;
        width: 100%;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
    .task-class-block {
        font-size: 32rpx;
        height: 85rpx;
        width: 100%;
        display: flex;
        align-items: center;
    }
    .task-class-block .task-class-info {
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
    }
    .task-class-info .class-name {
        color: #1abcb0;
    }
    .task-class-info .stu-list {
        margin-left: 20rpx;
    }
    .star-count {
        height: 60rpx;
        line-height: 60rpx;
        width: 90%;
        display: flex;
        justify-content: flex-start;
        margin-top: 5rpx;
    }
    .star-count .icon {
        display: inline-block;
        width: 40rpx;
        height: 40rpx;
        vertical-align: middle;
    }
    .star-count .block {
        width: 33.3%;
        line-height: 1;
        font-size: 0;
    }
    .star-count .block text {
        vertical-align:middle;
        display:inline-block;
        margin-left:10rpx;
        font-size: 32rpx;
    }
    .star-count .block text.faved {
        color: #1abcb0;
    }
    .star-count .block.star-block {
        color: #f80;
    }
