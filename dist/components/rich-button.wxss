.rich-button.green {
  background: #1abcb0;
}
.rich-button.blue {
  background: #02CDF9;
}
.rich-button.red {
  background: #ff7d7d;
}
.rich-button.warning {
  background: #f90;
}
.rich-button.grey {
  background: #dedede;
  color: #666 !important;
}
.rich-button.big {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  border-radius: 100rpx;
  font-size: 42rpx;
  margin: 0 auto;
}
.rich-button.big image {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  margin-right: 10rpx;
  vertical-align: middle;
}
.rich-button.middle {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 80rpx;
  font-size: 38rpx;
  margin: 0 auto;
}
.rich-button.middle image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-right: 10rpx;
  vertical-align: middle;
}
