
    .course {
        width: 100%;
        height: 240rpx;
        display: flex;
        justify-content: flex-start;
        padding: 30rpx 20rpx;
        box-sizing: border-box;
        background: #fff;
        /*border-top: 1px solid #ccc;*/
        border-bottom: 1px solid #efefef;
    }
    .course .content {
        width: calc(100% - 60rpx);
        height: 100%;
    }
    .link.detail {
        width: 60rpx;
    }
    .link image {
        width:30rpx;
        margin-left:15rpx;
        height:60rpx;
        margin-top:75rpx;
    }
    .course-name {
        font-size: 36rpx;
        height: 60rpx;
        line-height: 60rpx;
        width: 100%;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
    .course .course-info {
        padding: 20rpx 0;
    }
    .course .course-info .course-teacher-info, .course .course-info .course-time-info {
        display: inline-block;
    }
    .course .course-info .course-time-info {
        margin-left: 30rpx;
    }
    .course-brief {
        color: #bbb;
    }
