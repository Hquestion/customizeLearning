@import "./../../components/dialog.wxss";
@import "./../../components/rich-button.wxss";
@import "./../../components/step-list.wxss";

    .arrange-container {
        text-align: left;
    }

    .nav {
        display: flex;
        justify-content: center;
        flex-direction: row;
        border-bottom: 1px solid #efefef;
        text-align: center;
    }

    .nav navigator {
        flex: 1;
    }
    .button-block {
        position: fixed;
        width: 100%;
        height: 160rpx;
        background: #fff;
        bottom: 0;
        left: 0;
    }
    .button-block .btn {
        width: 50%;
    }
    scroll-view {
        width: 100%;
        height: calc(100vh - 240rpx);
    }
    .disable-edit scroll-view {
        height: calc(100vh - 80rpx);
    }
    .add-step-dialog .dialog-btn {
        margin-top: 20rpx;
    }
    .add-step-dialog .content input {
        height:90rpx;
        width:100%;
        border:1px solid #dedede;
        border-radius:10rpx;
        padding:10rpx 20rpx;
        box-sizing:border-box;
        margin-top: 20rpx;
    }
    .add-step-dialog .content textarea {
        margin-top: 10rpx;
        border:1px solid #dedede;
        border-radius: 10rpx;
        width:100%;
        height: 450rpx;
        padding: 10rpx 20rpx;
        box-sizing:border-box;
    }
