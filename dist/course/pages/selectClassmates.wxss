@import "./../../components/empty-content.wxss";
@import "./../../components/rich-button.wxss";

    .select-class-container .search-block{
        width:calc(100% - 40rpx);
        height:100rpx;
        margin:20rpx auto 0;
        border:1px solid #dedede;
        padding:10rpx;
        border-radius:10rpx;
        box-sizing:border-box;
    }
    .search-block image {
        width: 50rpx;
        height: 50rpx;
    }
    .search-block input {
        width: calc(100% - 60rpx);
        height: 60rpx;
    }
    .task-star image {
        width: 50rpx;
        height: 50rpx;
    }
    .task-star text {
        display: inline-block;
        vertical-align: top;
    }
    .detail-block {
        height: calc(100vh - 400rpx);
    }
    .button-block {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 140rpx;
        padding: 20rpx 0;
        background:#fff;
    }
    .stu-block {
        width: 100%;
        height: 100rpx;
        border-bottom: 1rpx solid #dedede;
        padding: 10rpx 50rpx 10rpx 30rpx;
        box-sizing: border-box;
    }
    .stu-block.active {
        color: #1abcb0;
    }
    .select-box image {
        width: 50rpx;
        height: 50rpx;
    }
    .selected-block {
        height: 100rpx;
        width: 100%;
        font-size: 30rpx;
        padding:10rpx 20rpx;
        box-sizing: border-box;
    }
