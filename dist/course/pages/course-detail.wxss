@import "./../../components/course-detail.wxss";
@import "./../../components/rich-button.wxss";

    .course-detail-container {
        padding: 20rpx;
    }
    .course-name {
        color: #1abcb0;
        font-size: 40rpx;
        text-align: center;
    }
    .block {
        padding: 20rpx 0;
    }
    .task-status {
        border-top: 1px dashed #ccc;
        margin-top: 20rpx;
        padding: 20rpx 0;
        text-align: center;
    }
    .task-status .task-brief {
        padding: 10rpx 0 20rpx;
    }
    .finish-item {
        display: flex;
        justify-content: space-between;
        padding: 10rpx;
    }
    .task-star image {
        width: 50rpx;
        height: 50rpx;
    }
    .task-star text {
        display: inline-block;
        vertical-align: top;
        margin-left:10rpx;
    }
    .detail-block {
        height: calc(100vh - 140rpx);
    }
    .button-block {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 140rpx;
        padding: 20rpx 0;
        background: #fff;
    }
