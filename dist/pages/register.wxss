@import "./../components/rich-button.wxss";

    .register-container {
        width: 100%;
        height: 100vh;
        text-align: center;
        background-color: #ecfaff;
        position: relative;
    }
    .register-main {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: auto;
        box-sizing: border-box;
        padding: 20rpx;
        z-index: 30;
    }
    .avatar-box {
        width: 100%;
        padding: 20rpx;
        margin: 0 auto;
        box-sizing: border-box;
        height:150rpx;
    }
    .avatar-box image {
        width:300rpx;
        height:255rpx;
        display: none;
    }
    .input-box {
        width: 90%;
        text-align: left;
        margin: 40rpx auto 0;
        padding:25rpx;
        box-sizing:border-box;
        border: 1px solid #1abcb0;
        border-radius: 10rpx;
        background-color: #fff;
    }
    .btn-box {
        margin-top: 80rpx;
    }
    .page-bg {
        position: absolute;
        width: 100%;
        height: 50vw;
        bottom: 0;
        left: 0;
    }
    .info {
        font-size:36rpx;
        padding: 10rpx;
        box-sizing: border-box;
    }
