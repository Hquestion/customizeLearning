@import "./../components/rich-button.wxss";
@import "./../components/panel.wxss";
@import "./../components/teacher-course-task.wxss";
@import "./../components/personal-task.wxss";

    .mine-container {
        text-align: center;
        background: #E3FAFF;
    }
    .user-block {
        padding: 50rpx 0 100rpx;
        background: #02CDF9;
        color: #fff;
        font-size: 36rpx;
        position: relative;
    }
    .mine-container.female .user-block {
        background: #FF7D7D;
    }
    .bolang {
        width: 100vw;
        height: 8vw;
        position: absolute;
        bottom: 0;
        left: 0;
    }
    .userinfo-avatar {
        width: 160rpx;
        height: 160rpx;
        border-radius: 160rpx;
    }
    .userinfo-nickname {
        font-size:42rpx;
        padding: 10rpx;
    }
    .my-task-block {
        padding: 20rpx;
        background: #E3FAFF;
        box-sizing: border-box;
    }
    .my-task-block .task-block {
        border: 1rpx solid #82cDF9;
        margin-top: 20rpx;
        border-radius: 20rpx;
    }
    .mine-container.female .my-task-block .task-block {
        border: 1rpx solid #ff7d7d;
    }
    .my-task-block .task-block .task-comp {
        margin-top: 20rpx;
    }
    .my-task-block .task-block .task-comp:first-child {
        margin-top: 0;
    }
    .task-block.task-common {
        background: #f2f2f2;
    }
    .teacher-task-block {
        padding: 20rpx;
        box-sizing: border-box;
    }
    .teacher-task-block .task-block {
        border: 1px solid #dedede;
        box-sizing: border-box;
        border-radius: 10rpx;
        margin-top: 20rpx;
    }
    .teacher-task-block .task-block .panel {
        border-radius: 10rpx;
    }
    .teacher-task-block .task-block .panel-content {
        background: #f2f2f2;
        text-indent: 0;
    }
    .teacher-task-block .task-block .panel-content .t-task-comp {
        margin-top: 20rpx;
    }
